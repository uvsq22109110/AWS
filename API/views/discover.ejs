<%- include('./header.ejs')%>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="contact">Contact</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div>
      <div class="row center">
        <!--boucler sur la liste des restos-->
        <% for (var i = 0; i < data.length; i++) { %>
        <div class="card" style="width: 22rem; margin: 1em;">
          <img class="card-img-top" src="https://media-cdn.tripadvisor.com/media/photo-s/1a/b9/69/17/resto-novo.jpg" alt="Card image cap">
          <div class="card-body">
            <p class="card-text"><%= data[i].cuisine %></p>
            <h5 class="card-title"><%= data[i].nom %></h5>
            <p class="card-text"><%= data[i].adresse %></p>
            <p class="card-text">Contact: <%= data[i].telephone %></p>
            <a href="#" class="btn btn-primary">Reservez</a>
          </div>
        </div>
        <% } %>
      </div>
      <% if (pages > 0) { %>
        <nav aria-label="Page navigation example">
          <ul class="pagination justify-content-center">
            <% if (current == 1) { %>
              <li class="page-item disabled"><a class="page-link">First</a></li>
          <% } else { %>
              <li class="page-item"><a class="page-link" href="/restos/1">First</a></li>
          <% } %>
          <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
          <% if (i !== 1) { %>
              <li class="page-item disabled"><a class="page-link">...</a></li>
          <% } %>
          <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
              <% if (i == current) { %>
                  <li class="page-item active"><a class="page-link"><%= i %></a></li>
              <% } else { %>
                  <li  class="page-item"><a class="page-link" href="/restos/<%= i %>"><%= i %></a></li>
              <% } %>
              <% if (i == Number(current) + 4 && i < pages) { %>
                  <li class="Â²page-item disabled"><a class="page-link">...</a></li>
              <% } %>
          <% } %>
          <% if (current == pages) { %>
              <li class="page-item disabled"><a class="page-link">Last</a></li>
          <% } else { %>
              <li  class="page-item"><a class="page-link" href="/restos/<%= pages %>">Last</a></li>
          <% } %>
          </ul>
        </nav>
    <% } %>
    </div>
    
</body>

</html>