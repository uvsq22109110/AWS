   <header> 
    <div>
      <form action="/reservations" method="GET">

        <p class="text">
          Veuillez choisir un restaurant 
        </p>
        <div id="premierTrait"></div>
        <div class="row center">
        <!--boucler sur la liste des restos-->
        <% for (var i = 0; i < data.length; i++) { %>
        
        <div class="card"style="width: 20rem; margin: 1em; background-color: #E4D1B9; border-style: none;   padding-top: 100px; " >
          
          <div class="card-body">

          <% if (data[i].cuisine == "Italienne") { %>
          <img class="card-img-top" src="img/italien.jpg" style="width: 250px; border-radius: 50px; margin-left: 10px;"alt="Card image cap">
          <% } %>
           <% if (data[i].cuisine == "Japonaise") { %>
          <img src="img/asian.jpg" style="width: 250px; border-radius: 50px; margin-left: 10px;" alt="Card image cap">
          <% } %>

          <% if (data[i].cuisine == "Chinoise") { %>
          <img src="img/asian1.jpg" style="width: 250px; border-radius: 50px; margin-left: 10px;" alt="Card image cap">
          <% } %>

          <% if (data[i].cuisine == "Portugaise") { %>
          <img src="img/asian2.jpg" style="width: 250px; border-radius: 50px; margin-left: 10px;" alt="Card image cap">
          <% } %>

          <% if (data[i].cuisine == "Turque") { %>
          <img src="img/turque.jpg" style="width: 250px; border-radius: 50px; margin-left: 10px;" alt="Card image cap">
          <% } %>

          <% if (data[i].cuisine == "Indienne") { %>
          <img src="img/turc2.jpg" style="width: 250px; border-radius: 50px; margin-left: 10px;" alt="Card image cap">
          <% } %>

          <% if (data[i].cuisine == "Mexicaine") { %>
          <img src="img/asian.jpg" style="width: 250px; border-radius: 50px; margin-left: 10px;" alt="Card image cap">
          <% } %>

          <% if (data[i].cuisine == "Francaise") { %>
          <img src="img/asian.jpg" style="width: 250px; border-radius: 50px; margin-left: 10px;" alt="Card image cap">
          <% } %>

          <% if (data[i].cuisine == "Libanaise") { %>
          <img src="img/asian.jpg" style="width: 250px; border-radius: 50px; margin-left: 10px;" alt="Card image cap">
          <% } %>

          <% if (data[i].cuisine == "Algerienne") { %>
          <img src="img/orientaux.jpg" style="width: 250px; border-radius: 50px; margin-left: 10px;" alt="Card image cap">
          <% } %>

          <% if (data[i].cuisine == "Thai") { %>
          <img src="img/asian.jpg" style="width: 250px; border-radius: 50px; margin-left: 10px;" alt="Card image cap">
          <% } %>

          <% if (data[i].cuisine == "Fruit de mer Poisson") { %>
          <img src="img/asian.jpg" style="width: 250px; border-radius: 50px; margin-left: 10px;" alt="Card image cap">
          <% } %>

          <% if (data[i].cuisine == "Vegan") { %>
          <img src="img/asian.jpg" style="width: 250px; border-radius: 50px; margin-left: 10px;" alt="Card image cap">
          <% } %>

          <% if (data[i].cuisine == "Bresilienne") { %>
          <img src="img/asian.jpg" style="width: 250px; border-radius: 50px; margin-left: 10px;" alt="Card image cap">
          <% } %>

           <% if (data[i].cuisine == "Africaine") { %>
          <img src="img/asian.jpg" style="width: 250px; border-radius: 50px; margin-left: 10px;" alt="Card image cap">
          <% } %>

           <% if (data[i].cuisine == "Pakistanaise") { %>
          <img src="img/asian.jpg" style="width: 250px; border-radius: 50px; margin-left: 10px;" alt="Card image cap">
          <% } %>

           <% if (data[i].cuisine == "Afghan") { %>
          <img src="img/asian.jpg" style="width: 250px; border-radius: 50px; margin-left: 10px;" alt="Card image cap">
          <% } %>

           <% if (data[i].cuisine == "Gastronomique") { %>
          <img src="img/asian.jpg" style="width: 250px; border-radius: 50px; margin-left: 10px;" alt="Card image cap">
          <% } %>

           <% if (data[i].cuisine == "Marocaine") { %>
          <img src="img/oriental1.jpg" style="width: 250px; border-radius: 50px; margin-left: 10px;" alt="Card image cap">
          <% } %>

          <% if (data[i].cuisine == "Tunisienne") { %>
          <img src="img/orientaux2.jpg" style="width: 250px; border-radius: 50px; margin-left: 10px;" alt="Card image cap">
          <% } %>

            <p class="card-text"><%= data[i].cuisine %></p>
            
            <h5 class="card-title"><%= data[i].nom %></h5>
            <p class="card-text"><%= data[i].adresse %></p>
            <p class="card-text">Contact: <%= data[i].telephone %></p>

            <a  href="reservations?id=<%=data[i].id%>&nom=<%=data[i].nom%>" class="btn btn-primary" >Reservez</a>
            
          </div>
        </div>
        <% } %>
      </div>
      </form>
      <% if (pages > 0) { %>
        <nav aria-label="Page navigation example">
          <ul class="pagination justify-content-center">
            <% if (current == 1) { %>
              <li class="page-item disabled"><a class="page-link">First</a></li>
          <% } else { %>
              <li class="page-item"><a class="page-link" href="/restos/1">First</a></li>
          <% } %>
          <% var i = (Number(current) > 2 ? Number(current) - 1 : 1) %>
          <% if (i !== 1) { %>
              <li class="page-item disabled"><a class="page-link">...</a></li>
          <% } %>
          <% for (; i <= (Number(current) + 2) && i <= pages; i++) { %>
              <% if (i == current) { %>
                  <li class="page-item active"><a class="page-link"><%= i %></a></li>
              <% } else { %>
                  <li  class="page-item"><a class="page-link" href="/restos/<%= i %>"><%= i %></a></li>
              <% } %>
              <% if (i == Number(current) + 2 && i < pages) { %>
                  <li class="²page-item disabled"><a class="page-link">...</a></li>
              <% } %>
          <% } %>
          <% if (current == pages) { %>
              <li class="page-item disabled"><a class="page-link">Last</a></li>
          <% } else { %>
              <li  class="page-item"><a class="page-link" href="/restos/<%= pages %>">Last</a></li>
          <% } %>
          </ul>
        </nav>
    <% } %>
    </div>
  </header>
