<%- include('./header2.ejs')%>
<body>
    
         <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <img src="img/Logo.svg" alt="Logo" height="50">
           <a class="Logo"aria-current="page" href="/">Art&Goût</a>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="add-resto">Ajouter mon restautant</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="contact">Contacts</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    
    <div class="reservation-container">
       
        <form class="reservation-form" action="/reservations?id=<%=data%>&nom=<%=nom_resto%>" method="POST">
            <div class="form-row header-row">
                <span class="reservation-form-header">Effectuez votre reservation</span>
            </div>
            <div class="form-row">
                <input id="Nom_client" type="text" name="Nom_client" placeholder="Nom*">
                  
                <input id="Prenom_client" type="text" name="Prenom_client" placeholder="Prenom*">
            </div>

            <div class="form-row">
                <input id="Num_tel_client" type="text" name="Num_tel_client" placeholder="Tel*">
                <input id="email" type="text" name="Mail_client" placeholder="Email*">
            </div>

            <div class="form-row">
                <input id="Nombre_de_personnes" type="text" name="Nombre_de_personnes" placeholder="Nombre de personnes*">
                <input id="date" type="date" name="date" placeholder="DD-MM-YYYYY*">
                
            </div>
           
            <div class="form-row submit-button">
                <input type="submit" value="Réserver">
            </div>

        </form>
    </div>
    <footer>
        <div id="contact" class="footer-background">
            <div class="col">
                <div class="restaurant-name">
                    <p>Art&Gout</p>
                    
                </div>
            </div>

</body>
</html>